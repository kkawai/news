<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
 
    <item android:id="@android:id/background">
            <shape android:shape="rectangle" >
                <corners android:radius="10dp" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/scrub_bar_grey_translucent"
                    android:startColor="@color/scrub_bar_grey_translucent" />
            </shape>
    </item>
    
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="10dp" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/er_cyan"
                    android:startColor="@color/er_cyan" />
            </shape>
        </clip>
    </item>
 
</layer-list>